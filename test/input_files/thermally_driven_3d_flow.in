# Mesh related options
[Mesh]
   [./Generation]
      dimension = '3'
      element_type = 'HEX27'
      n_elems_x = '3'
      n_elems_y = '3'
      n_elems_z = '3'
[]

# Options for tiem solvers



#Linear and nonlinear solver options
[linear-nonlinear-solver]
max_nonlinear_iterations = 50
max_linear_iterations = 2000

verify_analytic_jacobians = 1.0e-6

relative_step_tolerance = 1.0e-10

# Visualization options
[vis-options]
output_vis = false
vis_output_file_prefix = thermally_driven_3d_flow
output_format = 'ExodusII xdr'

# Options for print info to the screen
[screen-options]
print_equation_system_info = 'true'
print_mesh_info = 'true'
print_log_info = 'true'
solver_verbose = 'true'
solver_quiet = 'false'

echo_physics = 'true'

[Materials]
   [./TestMaterial]
      [./Viscosity]
          model = 'constant'
          value = '1.0'
      [../ThermalConductivity]
          model = 'constant'
          value = '1.0'
    [../Density]
      value = '1.0'
      [../SpecificHeat]
         model = 'constant'
         value = '1.0'
      [../ReferenceTemperature]
         value = '1.0'
      [../ThermalExpansionCoeff]
         value = '1.0'
[]

[Physics]

   enabled_physics = 'IncompressibleNavierStokes HeatTransfer BoussinesqBuoyancy'

   [./IncompressibleNavierStokes]

      material = 'TestMaterial'

      pin_pressure = true
      pin_value = 100.0
      pin_location = '0.5 0.5'

   [../HeatTransfer]

      material = 'TestMaterial'

   [../BoussinesqBuoyancy]

      material = 'TestMaterial'
      g = '0 -9.8 0'
[]

[BoundaryConditions]
   bc_id_name_map = 'HotWall ColdWall AdiabaticWalls'
   bc_ids = '2 4 0:1:3:5'

   [./HotWall]
      [./Velocity]
         type = 'no_slip'
      [../]
      [./Temperature]
         type = 'isothermal'
         T = '10'
      [../]
   [../]

   [./ColdWall]
      [./Velocity]
         type = 'no_slip'
      [../]
      [./Temperature]
         type = 'isothermal'
         T = '1'
      [../]
   [../]

   [./AdiabaticWalls]
      [./Velocity]
         type = 'no_slip'
      [../]
      [./Temperature]
         type = 'adiabatic'
      [../]
   [../]
[]

[Variables]
   [./Temperature]
      names = 'T'
      fe_family = 'LAGRANGE'
      order = 'SECOND'
   [../]
   [./Velocity]
      names = 'u v w'
      fe_family = 'LAGRANGE'
      order = 'SECOND'
   [../]
   [./Pressure]
      names = 'p'
      fe_family = 'LAGRANGE'
      order = 'FIRST'
   [../]
[]
